        // Form handling
        document.addEventListener('DOMContentLoaded', function() {
            const forms = document.querySelectorAll('.program-form');
            
            forms.forEach(form => {
                form.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    
                    const submitButton = this.querySelector('.submit-button');
                    const messageDiv = this.querySelector('.form-message');
                    const programName = this.getAttribute('data-program');
                    
                    // Get form data
                    const formData = {
                        program: programName,
                        phone: this.querySelector('input[name="phone"]').value,
                        email: this.querySelector('input[name="email"]').value,
                        timestamp: new Date().toISOString()
                    };
                    
                    // Disable button
                    submitButton.disabled = true;
                    submitButton.textContent = 'Se trimite...';
                    
                    // Hide previous messages
                    messageDiv.classList.remove('success', 'error');
                    messageDiv.style.display = 'none';
                    
                    try {
                        // IMPORTANT: ÃnlocuieÈ™te acest URL cu endpoint-ul tÄƒu real
                        // PoÈ›i folosi Google Forms, Make.com, Zapier, sau propriul tÄƒu server
                        
                        // Exemplu cu Google Forms (trebuie sÄƒ configurezi)
                        // const response = await fetch('YOUR_GOOGLE_FORM_URL', {
                        //     method: 'POST',
                        //     body: new FormData(this)
                        // });
                        
                        // Exemplu cu webhook Make.com/Zapier
                        // const response = await fetch('YOUR_WEBHOOK_URL', {
                        //     method: 'POST',
                        //     headers: {
                        //         'Content-Type': 'application/json',
                        //     },
                        //     body: JSON.stringify(formData)
                        // });
                        
                        // TEMPORARY: Simulare success (Ã®nlocuieÈ™te cu cod real mai sus)
                        await new Promise(resolve => setTimeout(resolve, 1000));
                        
                        // Salvare Ã®n localStorage (backup)
                        const leads = JSON.parse(localStorage.getItem('fitness_leads') || '[]');
                        leads.push(formData);
                        localStorage.setItem('fitness_leads', JSON.stringify(leads));
                        
                        // Success message
                        messageDiv.classList.add('success');
                        messageDiv.textContent = 'âœ“ MulÈ›umesc! Vei fi contactatÄƒ Ã®n maxim 24h.';
                        messageDiv.style.display = 'block';
                        
                        // Reset form
                        this.reset();
                        
                        // Optional: Redirect cÄƒtre WhatsApp dupÄƒ 2 secunde
                        setTimeout(() => {
                            const message = `BunÄƒ! Sunt interesatÄƒ de programul "${programName}". Am completat formularul cu datele mele.`;
                            const whatsappURL = `https://wa.me/40748928734?text=${encodeURIComponent(message)}`;
                            window.open(whatsappURL, '_blank');
                        }, 2000);
                        
                    } catch (error) {
                        // Error message
                        messageDiv.classList.add('error');
                        messageDiv.textContent = 'âœ— A apÄƒrut o eroare. Te rugÄƒm sÄƒ Ã®ncerci din nou sau contacteazÄƒ direct pe WhatsApp.';
                        messageDiv.style.display = 'block';
                        
